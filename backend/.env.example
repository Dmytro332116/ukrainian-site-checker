# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/site_checker
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/site_checker

# Redis
REDIS_URL=redis://redis:6379/0

# Application
APP_NAME="Ukrainian Site Checker"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:8080", "http://localhost:3000"]

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Crawler settings
MAX_PAGES_PER_SCAN=100
MAX_DEPTH=5
REQUEST_TIMEOUT=10
MAX_WORKERS=5

# LanguageTool
LANGUAGETOOL_ENABLED=True

